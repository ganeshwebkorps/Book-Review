 
<%= form_with model: @book do |f| %>
    <div class="form-group mb-3">
        <%= f.label :book_name %>
        <%= f.text_field :book_name, class:"form-control"%>
    </div>
           
    <div class="form-group mb-3">
        <%= f.label :category %>
        <%= f.text_field :category, class:"form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.submit class:"btn btn-success btn-lg" %>
      <%# <%= link_to 'Back', service_centers_path, class:"btn btn-lg btn-secondary" %>
    </div>

<% end %>