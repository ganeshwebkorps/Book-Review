
<div>
    <% @books.each do |b| %>
    <div class="card mt-3 ms-3 text-center" style="width: 30rem;">
        <div class="card-body">
            <h6 class="card-subtitle mb-2 fs-3"> Book Name : <%= b.book_name %></h6>
            <h6 class="card-text mb-2 "> Book Category : <%= b.category %></h6>
            <%= link_to 'View book', book_path(b), class: "btn btn-success " %>
            <div class="mb-2, mt-2">
                <%= link_to "", "#", class: "btn btn-primary fa-sharp fa-solid fa-thumbs-up " %>
            </div>
        </div>
    </div>
    <% end %>
</div>


