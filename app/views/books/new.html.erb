            <%= f.label :category %>
            <%= f.text_field :category, class:"form-control" %>
        </div>

        <div class="form-group mb-3">
            <%= f.submit "Add Book", class:"btn btn-outline-success btn-sm" %>
        </div>

    <% end %>
