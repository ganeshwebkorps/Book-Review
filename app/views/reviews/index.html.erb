
<div>
    <% @reviews.each do |b| %>
    <div class="card mt-3 ms-3 text-center" style="width: 30rem;">
        <div class="card-body">
            <h6 class="card-subtitle mb-2 fs-3"> Book Id : <%= b.book_id %></h6>
            <h6 class="card-text mb-2 "> Discription : <%= b.discription %></h6>
            <%= link_to 'View Review', review_path(b), class: "btn btn-success" %>
        </div>
    </div>
    <% end %>
</div>


