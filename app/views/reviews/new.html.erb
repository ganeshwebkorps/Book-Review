

<div class="card" style="width: 20rem;">
  <div class="card-body">
<%= form_with model: @review do |f| %>
    <div class="form-group mb-3">
        <%= f.hidden_field :book_id, value: params[:id], class:"form-control" %>
    </div>

    <div class="form-group mb-3">
        <%= f.label :discription %>
        <%= f.text_field :discription, class:"form-control"%>
    </div>
           
    <div class="form-group mb-3">
      <%= f.submit class:"btn btn-outline-success btn-sm" %>
      <%= link_to 'Back', book_path(@book), class:"btn btn-sm btn-outline-secondary" %>
    </div>

<% end %>

  </div>
</div>