 
<%= form_with model: @review do |f| %>
    <div class="form-group mb-3">
        <%= f.hidden_field :book_id, value: params[:id], class:"form-control" %>
    </div>

    <div class="form-group mb-3">
        <%= f.label :discription %>
        <%= f.text_field :discription, class:"form-control"%>
    </div>
           
    <div class="form-group mb-3">
      <%= f.submit class:"btn btn-success btn-lg" %>
      <%= link_to 'Back', book_path(@book), class:"btn btn-lg btn-secondary" %>
    </div>

<% end %>