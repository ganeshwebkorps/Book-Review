


<div class= "row">
    <% @reviews.each do |b| %>
    <div class="card mt-3 ms-3 text-center row" style="width: 35rem;">
        <div class="card-body row">
            <h6 class="card-text mb-2 "> Discription : <%= b.discription %></h6>
            <%= link_to 'View Reviews', review_path(b), class: "btn btn-outline-info" %> 
        </div>
    </div>
    <% end %>
</div>







