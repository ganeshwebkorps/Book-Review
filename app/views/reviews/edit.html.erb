 
<%= form_with model: @review do |f| %>
    <div class="form-group mb-3">
        <%= f.label :book_id %>
        <%= f.number_field :book_id, value: params[:id], class:"form-control" %>
    </div>
   <div class="form-group mb-3">
        <%= f.label :reviewer_id %>
        <%= f.number_field :reviewer_id, class:"form-control" %>
    </div>
    <div class="form-group mb-3">
        <%= f.label :discription %>
        <%= f.text_field :discription, class:"form-control"%>
    </div>
           
    

    <div class="form-group mb-3">
      <%= f.submit class:"btn btn-success btn-lg" %>
      <%= link_to 'Back', books_path, class:"btn btn-lg btn-secondary" %>
    </div>

<% end %>